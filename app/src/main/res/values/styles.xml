<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!--MaterialCompoentを採用する場合は、-->

    <style name="ShapeAppearance.Sunflower.Card" parent="ShapeAppearance.MaterialComponents">
        <item name="cornerFamily">rounded</item>

        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeTopRight">@dimen/card_corner_radius</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">@dimen/card_corner_radius</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="group_detail_bar_name">
        <item name="android:layout_width">235dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:gravity">center|left</item>
        <item name="autoSizeTextType">none</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="group_detail_bar_input">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:layout_marginRight">32dp</item>
        <item name="android:textColor">#1B9F89</item>
        <item name="android:textSize">18sp</item>
        <item name="android:text">@string/no_set</item>
        <item name="android:gravity">center_horizontal|center_vertical|end</item>
    </style>

    <style name="group_detail_bar_switch">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:layout_marginRight">32dp</item>
        <item name="android:textColor">#1B9F89</item>
        <item name="android:textSize">18sp</item>

        <item name="android:gravity">center_horizontal|center_vertical|end</item>
    </style>

    <style name="AppTheme.Button" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">#CEEEE6</item>
    </style>

    <style name="AppTheme_LogIn" parent="FirebaseUI">
        <!-- Required for sign-in flow styling -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <color name="colorAccent">#C283CD</color>
    <color name="colorPrimaryDark">#009AA3</color>
    <color name="colorPrimary">#C9FFF7</color>
    <string name="off">off</string>
</resources>